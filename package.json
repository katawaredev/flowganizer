{
  "name": "flowganizer",
  "descriotion": "Organize your digital life",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "workspaces": [
    "packages/*",
    "config/*",
    "cypress"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:css-base": "npm run generate:css-base -- --minify",
    "build:css-variants": "npm run generate:css-variants -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:css-base": "npm run generate:css-base",
    "dev:css-variants": "npm run generate:css-variants -- --watch",
    "dev:remix": "cross-env NODE_ENV=development binode --require ./config/mocks -- @remix-run/dev:remix dev",
    "format": "prettier --write .",
    "generate:css": "tailwindcss -i ./app/styles/app.css -o ./app/styles/tailwind.css",
    "generate:css-base": "tailwindcss -i ./app/styles/base.css -o ./app/styles/tailwind-base.css",
    "generate:css-variants": "tailwindcss -i ./config/tailwindcss/variants/variants.css -o ./public/~/styles/tailwind-variants.css --config ./config/tailwindcss/variants/tailwind.config.js --postcss ./config/tailwindcss/variants/postcss.config.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "start": "remix-serve build",
    "start:mocks": "binode --require ./config/mocks -- @remix-run/serve:remix-serve build",
    "test": "vitest",
    "test:e2e:dev": "start-server-and-test dev http://localhost:3000 \"npx cypress open\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run\"",
    "preaudit": "npm run build",
    "audit": "cross-env PORT=8811 start-server-and-test start:mocks http://localhost:8811 \"npx cypress run --browser chrome --config specPattern='cypress/audit/*.cy.ts'\"",
    "typecheck": "tsc -b && tsc -b cypress",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "dependencies": {
    "@flowganizer/translation": "*",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.10",
    "@prisma/client": "^4.3.1",
    "@remix-run/node": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
    "@remix-run/server-runtime": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "isbot": "^3.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-domains": "^0.3.2",
    "remix-seo": "^0.1.0",
    "remix-utils": "^3.3.0",
    "tiny-invariant": "^1.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.7.16",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "c8": "^7.12.0",
    "cookie": "^0.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^10.7.0",
    "eslint": "^8.23.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prisma": "^4.3.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "3.1.8",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.2",
    "vitest": "^0.23.1"
  },
  "engines": {
    "node": ">=16"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
